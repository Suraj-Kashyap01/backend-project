<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Timetable Form</title>
  <link rel="stylesheet" href="/css/addTimeTable.css">
</head>

<body>
  <div class="form-container">
    <h2>Add Time Table</h2>
    <form class="timetable-form">

      <label for="lecture">Lecture Number</label>
      <select id="lecture" required>
        <!-- <option value="">Select Lecture</option> -->
        <option value="1">Lecture 1</option>
        <option value="2">Lecture 2</option>
        <option value="3">Lecture 3</option>
        <option value="4">Lecture 4</option>
        <option value="5">Lecture 5</option>
        <option value="6">Lecture 6</option>
        <option value="7">Lecture 7</option>
        <option value="8">Lecture 8</option>
      </select>

      <label for="subject">Subject Name</label>
      <input type="text" id="subject" placeholder="Enter subject name" required />

      <label for="email">Email</label>
      <input type="email" id="email" placeholder="Enter teacher's email" required />

      <div class="time-fields">
        <div>
          <label for="start">Start Time</label>
          <input type="time" id="start" required />
        </div>
        <div>
          <label for="end">End Time</label>
          <input type="time" id="end" required />
        </div>
      </div>
       <label for="day">Day</label>
      <select  id="day" required>
        <!-- <option value="">Select Day</option> -->
        <option value="monday">monday</option>
        <option value="tuesday">tuesday </option>
        <option value="wednesday">wednesday</option>
        <option value="thursday">thursday</option>
        <option value="friday">friday</option>
        <option value="saturday">saturday</option>
</select>
      <label for="room">Room Number</label>
      <input type="text" id="room" placeholder="Enter room number" required />

      <div class="buttons">
        <button type="button" class="cancel-btn">Cancel</button>
        <button type="submit" class="save-btn">Save</button>
      </div>
    </form>
  </div>
</body>
<script>
  let formTable = document.querySelector(".timetable-form");
  formTable.addEventListener("submit", async (ev) => {
    ev.preventDefault();
    let response = await fetch("/admin/savetimetable", {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
      },
      body: JSON.stringify({
        lecture: document.getElementById("lecture").value,
        subject: document.getElementById("subject").value,
        email: document.getElementById("email").value,
        start: document.getElementById("start").value,
        end: document.getElementById("end").value,
        day: document.getElementById("day").value,
        room: document.getElementById("room").value

      }),

    });
    if (!response.ok) {
      console.error("Server error:", response.status);
    } else {
      let result = await response.json();
      console.log("Success:", result);
    }
  });
</script>
</html> 