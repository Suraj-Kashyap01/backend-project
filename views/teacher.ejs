            <option value="thursday">thursday</option>
            <option value="friday">friday</option>
            <option value="saturday">saturday</option>
        </select> -->
        From: <input type="date" name="date" value="date" class="date" id="from">
        To: <input type="date" name="date" value="date" class="date" id="to">
        <label for="text">Reason</label>
        <textarea name="text" id="text" cols="50" rows="40" placeholder="Reason of leave"></textarea>
        <button id="cancel">Cancel</button>
        <button type="submit" id="submit-btn">Submit</button>
  </div>
  <script src="/js/teacher.js"></script>
</body>
</html>