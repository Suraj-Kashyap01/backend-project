<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>teacher Page</title>
  <link rel="stylesheet" href="/css/teacher.css">
</head>
<body>
  <div class="teacher-container">

    <!-- Sidebar -->
    <div class="sidebar">
      <h2><span style="color:purple;">Schedule</span> <span style="color:deeppink;">Sync</span></h2>
      <ul>
        <button class="clickbtn">ğŸ“Š Dashboard</button>
        <button class="clickbtn">ğŸ“… Calendar</button>
        <!-- <button class="clickbtn">ğŸ›‚ ApproveLeave</button> -->
        <button id="leave"class="clickbtn" >ğŸ›‚ Request Leave</button>
        <button>ğŸ“¥ Inbox</button>
      </ul>

      <p>Current View</p>
      <div class="view-box selected">ğŸ¤ Meeting</div>
       <button class="event-btn" id="view-box">â˜ Scheduling</button> 
      
      <!-- <button id="leave">LeaveSection</button> -->
      <button class="event-btn">Upcoming Event</button>
    </div>

    <!-- Main Content -->
    <div class="main">
      <div class="top-bar">
        <div class="time">
          <p><strong>Today</strong><br>
           <%= new Date().toLocaleDateString() %>   <!-- Only Date -->
           <%= new Date().toLocaleTimeString() %>   <!-- Only Time -->

          </p>
        </div>
       <h3>teacher page</h3>
        <div>
          <p>Logged in as<br><strong>
              <%= teacher.email %>
            </strong></p>
                      <a href="http://localhost:9000/auth/logout">Logout</a>

            <% if (teacher.uploadsFileName!=null) { %>
             <img src="/uploads/<%=teacher.uploadsFileName %>" alt="" height="" width="">
            <% } else { %>
              <% console.log("file not uploads");%>
              <p>No image uploaded</p>
               <% } %>
             
          <!-- <form action="/teacher/page/uploads" method="post" enctype="multipart/form-data">
            <input type="file" name="filedata" > -->
            <!-- <button type="submit">Uploads</button>
          </form> -->
        </div>
      </div>
      <!-- Time Table -->
      <table class="t-table">
        <tr>
          <th>Days/Time</th>
          <th>Period 1</th>
          <th>Period 2</th>
          <th>Period 3</th>
          <th>Period 4</th>
          <th>Period 5</th>
          <th>Period 6</th>
          <th>Period 7</th>
          <th>Period 8</th>
        </tr>

        <% const days=["monday", "tuesday" , "wednesday" , "thursday" , "friday" , "saturday" ]; %>
          <% days.forEach(day=> { %>
            <tr>
              <td>
                <%= day %>
              </td>
              <% for (let period=1; period < 9; period++) { %>
                <% let match=lectures.find(lec=> lec?.day?.toLowerCase() == day?.toLowerCase() && lec?.lecture == period?.toString()); %>
      
                  <% if (match) { %>
                    <td>
                      <strong>
                        <%= match.subject %>
                      </strong><br>
                      Teacher: <%= match.name %><br>
                        Room: <%= match.room %><br>
                        Time: <%= match.start %> - <%= match.end %>
                    </td>
                    <% } else { %>
                      <td>-</td>
                      <% } %>
                     <% } %>
            </tr>
            <% }); %>
      </table>
    </div>
  </div>
  <div class="teacher-leave">  
    <h1>Leave request Form</h1>
        <label for="day">Date</label>
        <!-- <select name="day" id="day">
            <option value="monday">monday</option>
