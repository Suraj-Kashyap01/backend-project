<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Schedule Sync</title>
  <link rel="stylesheet" href="/css/teacher.css">
</head>

<body>
  <div class="container">

    <!-- Sidebar -->
    <div class="sidebar">
      <h2><span style="color:purple;">Schedule</span> <span style="color:deeppink;">Sync</span></h2>
      <ul>
        <li>üìä Dashboard</li>
        <li>üìÖ Calendar</li>
        <li>üõÇ ApproveLeave</li>
        <li>üì• Inbox</li>
      </ul>

      <p>Current View</p>
      <div class="view-box selected">ü§ù Meeting</div>
       <form action="/teacherpage/leave" method="GET">
      <button class="view-box" >‚òÅ Scheduling</button>
      </form>
      <button class="event-btn">Upcoming Event</button>
    </div>

    <!-- Main Content -->
    <div class="main">
      <div class="top-bar">
        <div>
          <p><strong>Today</strong><br>
            <%= Date.now()%>
          </p>
        </div>
        <div>
          <p class="time">12:53:18 pm</p>
        </div>
        <div>
          <p>Logged in as<br><strong>
              <%= teacher.email %>
            </strong></p>
            <% if (teacher.uploadsFileName!=null) { %>
             <img src="/uploads/<%=teacher.uploadsFileName %>" alt="" height="70px" width="80px">
            <% } else { %>
              <% console.log("file not uploads");%>
              <p>No image uploaded</p>
               <% } %>
             
          <form action="/teacher/page/uploads" method="post" enctype="multipart/form-data">
            <input type="file" name="filedata" >
      
            <button type="submit">Uploads</button>
          </form>
        </div>
      </div>
      <!-- Time Table -->
      <table>
        <tr>
          <th>Days/Time</th>
          <th>Period 1</th>
          <th>Period 2</th>
          <th>Period 3</th>
          <th>Period 4</th>
          <th>Period 5</th>
          <th>Period 6</th>
          <th>Period 7</th>
          <th>Period 8</th>
        </tr>

        <% const days=["Monday", "Tuesday" , "Wednesday" , "Thursday" , "Friday" , "Saturday" ]; %>
          <% days.forEach(day=> { %>
            <tr>
              <td>
                <%= day %>
              </td>
              <% for (let period=1; period < 9; period++) { %>
                <% let match=teacher.lecture.find(lec=> lec?.day?.toLowerCase() == day?.toLowerCase() && lec?.lecture ==
                  period?.toString()); %>
                  <% if (match) { %>
                    <td>
                      <strong>
                        <%= match.subject %>
                      </strong><br>
                      Teacher: <%= match.name %><br>
                        Room: <%= match.room %><br>
                          Time: <%= match.start %> - <%= match.end %>

                    </td>
                    <% } else { %>
                      <td>-</td>
                      <% } %>
                        <% } %>
            </tr>
            <% }); %>
      </table>
    </div>
  </div>
  
</body>
</html>